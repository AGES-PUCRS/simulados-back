{
    "env": {
        "browser": true,
        "es6": true,
        "node":true,
        "mocha":true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "globals": {
        "describe": true,
        "it": true,
        "expect": true,
        "app": true,
        "request": true,
        "beforeEach": true,
        "require": true
    }
}